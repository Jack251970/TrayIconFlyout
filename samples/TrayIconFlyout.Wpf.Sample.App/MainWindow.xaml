<Window
    x:Class="U5BFA.Libraries.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    Title="TrayIconFlyout WPF Sample"
    Width="800"
    Height="450"
    ShowInTaskbar="False"
    WindowState="Minimized">
    <Grid>
        <tb:TaskbarIcon
            x:Name="TrayIcon"
            IconSource="/Assets/AppIcon.ico"
            ToolTipText="TrayIconFlyout WPF Sample"
            TrayMouseDoubleClick="TrayIcon_TrayMouseDoubleClick" />

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="WPF Sample - Check the System Tray!" />
    </Grid>
</Window>
