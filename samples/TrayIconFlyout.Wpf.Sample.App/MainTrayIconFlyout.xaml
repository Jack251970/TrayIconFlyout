<local:TrayIconFlyout
    x:Class="U5BFA.Libraries.MainTrayIconFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:U5BFA.Libraries;assembly=TrayIconFlyout.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="360"
    Height="600"
    IsTransitionAnimationEnabled="False"
    mc:Ignorable="d">

    <local:TrayIconFlyoutIsland Height="300">
        <Button
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Button 1" />
    </local:TrayIconFlyoutIsland>
    <local:TrayIconFlyoutIsland Height="300">
        <Button
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Button 2" />
    </local:TrayIconFlyoutIsland>

</local:TrayIconFlyout>