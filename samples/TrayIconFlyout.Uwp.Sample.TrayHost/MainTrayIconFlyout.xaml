<local:TrayIconFlyout
	x:Class="U5BFA.Libraries.MainTrayIconFlyout"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:U5BFA.Libraries"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	Width="360"
	mc:Ignorable="d">

	<local:TrayIconFlyout.Resources>
		<ResourceDictionary>
			<ResourceDictionary.ThemeDictionaries>
				<ResourceDictionary x:Key="Light">
					<AcrylicBrush
						x:Key="FlyoutAcrylicBrush"
						FallbackColor="#FFEEEEEE"
						TintColor="#FFF3F3F3"
						TintLuminosityOpacity="0.9"
						TintOpacity="0" />
				</ResourceDictionary>
				<ResourceDictionary x:Key="Dark">
					<AcrylicBrush
						x:Key="FlyoutAcrylicBrush"
						FallbackColor="#FF1C1C1C"
						TintColor="#FF202020"
						TintLuminosityOpacity="0.96"
						TintOpacity="0.5" />
				</ResourceDictionary>
				<ResourceDictionary x:Key="HighContrast">
					<SolidColorBrush x:Key="FlyoutAcrylicBrush" Color="{ThemeResource SystemColorWindowColor}" />
				</ResourceDictionary>
			</ResourceDictionary.ThemeDictionaries>
		</ResourceDictionary>
	</local:TrayIconFlyout.Resources>

	<local:TrayIconFlyoutIsland Height="300" Background="{ThemeResource FlyoutAcrylicBrush}">
		<Button Content="A" />
	</local:TrayIconFlyoutIsland>
	<local:TrayIconFlyoutIsland Height="300" Background="{ThemeResource FlyoutAcrylicBrush}">
		<TextBlock
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Text="Island 2" />
	</local:TrayIconFlyoutIsland>
	<local:TrayIconFlyoutIsland Height="300" Background="{ThemeResource FlyoutAcrylicBrush}">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="1" />
				<RowDefinition Height="*" />
				<RowDefinition Height="1" />
				<RowDefinition Height="46" />
			</Grid.RowDefinitions>

			<Border
				Grid.RowSpan="3"
				Background="{ThemeResource FlyoutOverlayBackgroundBrush}"
				CornerRadius="8,8,0,0" />
			<Border Grid.Row="1" Background="{ThemeResource FlyoutSeparatorPrimaryBackgroundBrush}" />
			<Border Grid.Row="3" Background="{ThemeResource FlyoutSeparatorSecondaryBackgroundBrush}" />

			<StackPanel Padding="16">
				<TextBlock
					Margin="0,0,0,8"
					FontFamily="Segoe UI Variable Display"
					FontSize="20"
					FontWeight="SemiBold"
					Text="Island 3" />
				<TextBlock Margin="0,0,0,8" Text="Select option" />
				<ComboBox HorizontalAlignment="Stretch">
					<ComboBoxItem Content="Option 1" />
					<ComboBoxItem Content="Option 2" />
					<ComboBoxItem Content="Option 3" />
					<ComboBoxItem Content="Option 4" />
					<ComboBoxItem Content="Option 5" />
				</ComboBox>
			</StackPanel>

			<StackPanel Grid.Row="2" Padding="16">
				<HyperlinkButton
					Margin="-4,0,0,8"
					Padding="4,2"
					Content="Learn more" />
				<CalendarDatePicker />
			</StackPanel>

			<Button
				Grid.Row="4"
				Width="36"
				Height="36"
				Margin="0,0,6,0"
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				Background="Transparent"
				BorderBrush="Transparent"
				BorderThickness="0">
				<muxc:AnimatedIcon>
					<muxc:AnimatedIcon.Source>
						<animatedvisuals:AnimatedSettingsVisualSource />
					</muxc:AnimatedIcon.Source>
				</muxc:AnimatedIcon>
			</Button>

		</Grid>
	</local:TrayIconFlyoutIsland>

</local:TrayIconFlyout>