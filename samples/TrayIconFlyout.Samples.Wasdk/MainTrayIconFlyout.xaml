<local:TrayIconFlyout
	x:Class="U5BFA.Libraries.MainTrayIconFlyout"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:U5BFA.Libraries"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Width="360"
	mc:Ignorable="d">

	<local:TrayIconFlyoutIsland Height="300">
		<Button
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Content="Button">
			<Button.Flyout>
				<MenuFlyout>
					<MenuFlyoutItem Text="A" />
					<MenuFlyoutItem Text="A" />
					<MenuFlyoutItem Text="A" />
				</MenuFlyout>
			</Button.Flyout>
		</Button>
	</local:TrayIconFlyoutIsland>
	<local:TrayIconFlyoutIsland Height="300">
		<TextBlock
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Text="Island 2" />
	</local:TrayIconFlyoutIsland>
	<local:TrayIconFlyoutIsland Height="300">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="1" />
				<RowDefinition Height="*" />
				<RowDefinition Height="1" />
				<RowDefinition Height="46" />
			</Grid.RowDefinitions>

			<Border
				Grid.RowSpan="3"
				Background="{ThemeResource FlyoutOverlayBackgroundBrush}"
				CornerRadius="8,8,0,0" />
			<Border Grid.Row="1" Background="{ThemeResource FlyoutSeparatorPrimaryBackgroundBrush}" />
			<Border Grid.Row="3" Background="{ThemeResource FlyoutSeparatorSecondaryBackgroundBrush}" />

			<StackPanel Padding="16">
				<TextBlock
					Margin="0,0,0,8"
					FontFamily="Segoe UI Variable Display"
					FontSize="20"
					FontWeight="SemiBold"
					Text="Island 3" />
				<TextBlock Margin="0,0,0,8" Text="Select option" />
				<ComboBox HorizontalAlignment="Stretch">
					<ComboBoxItem Content="Option 1" />
					<ComboBoxItem Content="Option 2" />
					<ComboBoxItem Content="Option 3" />
					<ComboBoxItem Content="Option 4" />
					<ComboBoxItem Content="Option 5" />
				</ComboBox>
			</StackPanel>

			<StackPanel Grid.Row="2" Padding="16">
				<HyperlinkButton
					Margin="-4,0,0,8"
					Padding="4,2"
					Content="Learn more" />
				<CalendarDatePicker />
			</StackPanel>

			<Button
				Grid.Row="4"
				Width="36"
				Height="36"
				Margin="0,0,6,0"
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				Background="Transparent"
				BorderBrush="Transparent"
				BorderThickness="0">
				<AnimatedIcon>
					<AnimatedIcon.Source>
						<animatedvisuals:AnimatedSettingsVisualSource />
					</AnimatedIcon.Source>
				</AnimatedIcon>
			</Button>

		</Grid>
	</local:TrayIconFlyoutIsland>

</local:TrayIconFlyout>